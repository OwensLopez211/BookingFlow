{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": [
        "es2020"
      ],
      "declaration": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "inlineSourceMap": true,
      "inlineSources": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "exclude": [
      "node_modules",
      "cdk.out"
    ]
  }